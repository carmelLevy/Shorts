<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F8F8F8</item>
        <item name="colorPrimaryDark">#C7CCD1</item>
        <item name="colorAccent">@color/indigo</item>
        <item name="icdStyle">@style/CustomIconDialogStyle</item>
        <item name="popupMenuStyle">@style/popupMenu</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>

    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="popupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popupmenu_background</item>
    </style>


    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">#2D8F97</item>
        <!-- actionMenuTextColor is the color of the text of action (popup_menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/salmon</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/sandy_brown</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/sea_green</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/sky_blue</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->

        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>

    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Your custom dialog style, don't forget to specify the parent style! -->
    <style name="CustomIconDialogStyle" parent="IcdStyle">
        <item name="icdIconSize">60dp</item>
        <item name="icdIconColor">#9FE3DB</item>
        <item name="icdListHeaderStyle">@style/CustomHeaderStyle</item>
        <item name="icdDialogButtonStyle">@style/IcdButtonStyle</item>
        <item name="icdSelectedIconColor">@color/midnight_blue</item>
        <item name="icdDialogListStyle">@style/IcdListStyle</item>
    </style>


    <style name="CustomHeaderStyle" parent="IcdListHeaderStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">monospace</item>

    </style>

    <style name="IcdButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/sign_in_button_design</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
